pipeline {
    agent any
    
    parameters {
        choice(
            name: 'ENVIRONMENT',
            choices: ['dev', 'staging', 'production'],
            description: 'Which environment to deploy to?'
        )

        booleanParam(
            name: 'RUN_TESTS',
            defaultValue: false,
            description: 'Run tests? (Adds ~3s)'
        )
    }

    environment {
        DOCKER_REGISTRY     = credentials('docker-registry-url')
        DOCKER_IMAGE_PREFIX = credentials('docker-image-prefix')
        GIT_COMMIT_SHORT    = sh(script: "git rev-parse --short HEAD", returnStdout: true).trim()
        IMAGE_TAG           = "${BUILD_NUMBER}-${GIT_COMMIT_SHORT}"
        DOCKER_BUILDKIT     = "1"
        
        // Slack webhook
        SLACK_WEBHOOK       = credentials('slack-webhook-url')
    }
    
    stages {
        stage('Initialize') {
            steps {
                script {
                    // Auto-detect environment from branch
                    env.DEPLOY_ENV = determineEnvironment()
                    
                    // Get git info for notifications
                    env.GIT_AUTHOR = sh(script: "git log -1 --pretty=format:'%an'", returnStdout: true).trim()
                    env.GIT_COMMIT_MSG = sh(script: "git log -1 --pretty=format:'%s'", returnStdout: true).trim()
                    
                    echo "üîß Initialized: Environment=${env.DEPLOY_ENV}, Tag=${IMAGE_TAG}"
                }
            }
        }

        stage('Notify Start') {
            steps {
                script {
                    sendSlackNotification(
                        "üöÄ *Build Started* #${BUILD_NUMBER}",
                        "Branch: `${env.GIT_BRANCH}`\nEnvironment: `${env.DEPLOY_ENV}`\nCommit: `${env.GIT_COMMIT_SHORT}`",
                        "#36a64f"
                    )
                }
            }
        }

        stage('Checkout') {
            steps {
                echo 'üì¶ Checking out code...'
                checkout scm
            }
        }
        
        stage('Test') {
            when {
                expression { 
                    params.RUN_TESTS == true || env.GIT_BRANCH == 'origin/main' 
                }
            }

            steps {
                echo 'üß™ Running tests in Python container...'
                sh '''
                    docker run --rm \
                        -v $WORKSPACE:/app \
                        -w /app \
                        python:3.11-slim \
                        bash -c "
                            pip install -r build/requirements.txt || true
                            python -m pytest tests/ || true  
                            flake8 src/ || true
                        " || echo "Tests completed"
                '''
            }
        }
        
        stage('Build Docker Images') {
            steps {
                echo 'üê≥ Building multi-stage Docker images in parallel...'
                script {
                    echo "Building images with tag: ${IMAGE_TAG}"
                    
                    sendSlackNotification(
                        "üê≥ Building Docker Images...",
                        "Tag: `${IMAGE_TAG}`",
                        "#439FE0"
                    )

                    parallel(
                        'data-fetcher': {
                            echo 'üì¶ Building Data Fetcher...'
                            sh """
                                docker build \
                                    --target data-fetcher \
                                    -f build/Dockerfile.dev \
                                    -t ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-fetcher:${IMAGE_TAG} \
                                    .
                            """
                        },
                        'trainer': {
                            echo 'ü§ñ Building ML Trainer...'
                            sh """
                                docker build \
                                    --target trainer \
                                    -f build/Dockerfile.dev \
                                    -t ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-trainer:${IMAGE_TAG} \
                                    .
                            """
                        },
                        'api': {
                            echo 'üåê Building API Service...'
                            sh """
                                docker build \
                                    --target api \
                                    -f build/Dockerfile.dev \
                                    -t ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-api:${IMAGE_TAG} \
                                    .
                            """
                        }
                    )
                }
            }
        }
        
        stage('Push Docker Images') {
            steps {
                echo 'üì§ Pushing images to Docker Hub...'
                script {
                    // Determine if we should push :latest tag
                    def pushLatest = (env.DEPLOY_ENV == 'production')
                    
                    // Tag with :latest if production
                    if (pushLatest) {
                        sh """
                            docker tag ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-fetcher:${IMAGE_TAG} \
                                ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-fetcher:latest
                            docker tag ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-trainer:${IMAGE_TAG} \
                                ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-trainer:latest
                            docker tag ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-api:${IMAGE_TAG} \
                                ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-api:latest
                        """
                    }
                    
                    parallel(
                        'push-fetcher': {
                            sh """
                                docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-fetcher:${IMAGE_TAG}
                            """
                            if (pushLatest) {
                                sh """
                                    docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-fetcher:latest
                                """
                            }
                        },
                        'push-trainer': {
                            sh """
                                docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-trainer:${IMAGE_TAG}
                            """
                            if (pushLatest) {
                                sh """
                                    docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-trainer:latest
                                """
                            }
                        },
                        'push-api': {
                            sh """
                                docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-api:${IMAGE_TAG}
                            """
                            if (pushLatest) {
                                sh """
                                    docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-api:latest
                                """
                            }
                        }
                    )
                    
                    if (pushLatest) {
                        echo 'üì¶ Pushed :latest tags for production'
                    } else {
                        echo '‚è≠Ô∏è  Skipped :latest tags (not production)'
                    }
                }
            }
        }

        stage('Set Repository Privacy') {
            when {
                expression { 
                    // Only run if credentials exist
                    return env.DOCKERHUB_USERNAME && env.DOCKERHUB_TOKEN
                }
            }
            steps {
                echo 'üîí Setting Docker Hub repository privacy...'
                sh '''
                    # Function to make repo private
                    make_private() {
                        local repo=$1
                        
                        # Get token
                        TOKEN=$(curl -s -H "Content-Type: application/json" \
                        -X POST \
                        -d '{"username": "'${DOCKERHUB_USERNAME}'", "password": "'${DOCKERHUB_TOKEN}'"}' \
                        https://hub.docker.com/v2/users/login/ | jq -r .token)
                        
                        # Make private
                        curl -s -H "Authorization: JWT ${TOKEN}" \
                        -H "Content-Type: application/json" \
                        -X PATCH \
                        -d '{"is_private": true}' \
                        https://hub.docker.com/v2/repositories/${DOCKERHUB_USERNAME}/${repo}/
                        
                        echo "Set ${repo} to private"
                    }
                    
                    # Make specific repos private
                    make_private "dota2-fetcher"
                    make_private "dota2-trainer"
                    make_private "dota2-api"
                '''
            }
        }
        
        stage('Deploy to Environment') {
            steps {
                script {
                    echo "üöÄ Deploying to ${env.DEPLOY_ENV}..."
                    
                    sendSlackNotification(
                        "üöÄ Deploying to ${env.DEPLOY_ENV}...",
                        "Image: `${IMAGE_TAG}`",
                        "#FFA500"
                    )

                    // Production requires approval
                    if (env.DEPLOY_ENV == 'production') {
                        input message: '‚ö†Ô∏è  Deploy to PRODUCTION?', ok: 'Deploy'
                    }
                    
                    // Use your existing deploy-with-helm.sh script
                    sh """
                        cd cli
                        chmod +x deploy-with-helm.sh
                        ./deploy-with-helm.sh ${env.DEPLOY_ENV} ${IMAGE_TAG}
                    """
                }
            }
        }
        
        stage('Verify Deployment') {
            steps {
                echo 'üîç Verifying deployment...'
                sh """
                    kubectl get pods -n data
                    kubectl get svc -n data
                    
                    # Wait for pods to be ready
                    kubectl wait --for=condition=ready pod \
                        -l app=dota2-meta-lab \
                        -n data \
                        --timeout=300s || echo "Some pods not ready yet"
                """
            }
        }
    }
    
    post {
        always {
            echo 'üßπ Cleaning up...'
            script {
                sh """
                    docker rmi ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-fetcher:${IMAGE_TAG} || true
                    docker rmi ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-trainer:${IMAGE_TAG} || true
                    docker rmi ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-api:${IMAGE_TAG} || true
                    
                    # Clean up :latest tags if they exist
                    docker rmi ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-fetcher:latest || true
                    docker rmi ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-trainer:latest || true
                    docker rmi ${DOCKER_REGISTRY}/${DOCKER_IMAGE_PREFIX}/dota2-api:latest || true
                """
            }
        }
        
        success {
            script {
                def duration = currentBuild.durationString.replace(' and counting', '')
                
                echo '‚úÖ Pipeline completed successfully!'
                echo "üöÄ Deployed ${IMAGE_TAG} to ${env.DEPLOY_ENV}"
                
                sendSlackNotification(
                    "‚úÖ *Deployment Successful!*",
                    """*Environment:* `${env.DEPLOY_ENV}`
*Build:* #${BUILD_NUMBER}
*Duration:* ${duration}
*Image:* `${IMAGE_TAG}`
*Author:* ${env.GIT_AUTHOR}
*Commit:* ${env.GIT_COMMIT_MSG}
*Branch:* `${env.GIT_BRANCH}`""",
                    "good"
                )
            }
        }
        
        failure {
            script {
                def duration = currentBuild.durationString.replace(' and counting', '')
                
                echo '‚ùå Pipeline failed!'
                
                sendSlackNotification(
                    "‚ùå *Deployment Failed!*",
                    """*Environment:* `${env.DEPLOY_ENV}`
*Build:* #${BUILD_NUMBER}
*Duration:* ${duration}
*Branch:* `${env.GIT_BRANCH}`
*Console:* ${env.BUILD_URL}console""",
                    "danger"
                )
            }
        }
    }
}

// Helper function to determine environment from branch
def determineEnvironment() {
    def branch = env.GIT_BRANCH ?: 'unknown'
    
    if (branch.contains('main')) {
        return 'production'
    } else if (branch.contains('staging')) {
        return 'staging'
    } else if (branch.contains('dev') || branch.contains('develop')) {
        return 'dev'
    } else {
        return 'dev'  // Default to dev for feature branches
    }
}

// Helper function to send Slack notifications
def sendSlackNotification(String title, String message, String color) {
    // Escape special characters in message
    def escapedMessage = message.replaceAll('"', '\\\\"').replaceAll('\n', '\\\\n')
    def escapedTitle = title.replaceAll('"', '\\\\"')
    
    def payload = """
    {
        "attachments": [{
            "color": "${color}",
            "title": "${escapedTitle}",
            "text": "${escapedMessage}",
            "footer": "Jenkins CI/CD",
            "footer_icon": "https://jenkins.io/images/logos/jenkins/jenkins.png",
            "ts": ${System.currentTimeMillis() / 1000}
        }]
    }
    """
    
    sh """
        curl -X POST '${SLACK_WEBHOOK}' \
        -H 'Content-Type: application/json' \
        -d '${payload}' || echo "Slack notification failed"
    """
}