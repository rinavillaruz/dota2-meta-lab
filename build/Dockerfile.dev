# Multi-stage Dockerfile for Dota2 Meta Lab
# Updated for organized structure with scripts/ for Python and cli/ for shell scripts

# =============================================================================
# Stage 1: Data Fetcher
# =============================================================================
FROM python:3.11-slim AS data-fetcher

WORKDIR /app

# Install dependencies
COPY build/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy organized source code
COPY src/ ./src/
COPY scripts/fetch_data.py ./scripts/

# Set environment variables
ENV OPENDOTA_API_KEY=""
ENV OUTPUT_DIR=/data
ENV LOG_LEVEL=INFO

# This stage fetches data from OpenDota API
ENTRYPOINT ["python", "scripts/fetch_data.py"]


# =============================================================================
# Stage 2: Model Trainer
# =============================================================================
FROM python:3.11-slim AS trainer

WORKDIR /app

# Install dependencies
COPY build/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy organized source code
COPY src/ ./src/
COPY scripts/train.py ./scripts/

# Set environment variables
ENV DATA_DIR=/data/latest
ENV MODEL_DIR=/models
ENV EPOCHS=50
ENV BATCH_SIZE=32
ENV NUM_HEROES=130
ENV LOG_LEVEL=INFO

# This stage trains the model
ENTRYPOINT ["python", "scripts/train.py"]


# =============================================================================
# Stage 3: API Server (Main)
# =============================================================================
FROM python:3.11-slim AS api

WORKDIR /app

# Install dependencies
COPY build/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY src/ ./src/
COPY api/ ./api/

# Set environment variables
ENV MODEL_DIR=/models
ENV LOG_LEVEL=INFO

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
  CMD python -c "import requests; requests.get('http://localhost:8080/health')"

# Run API server
CMD ["gunicorn", "--bind", "0.0.0.0:8080", "--workers", "4", "--timeout", "120", "api.app:app"]


# =============================================================================
# Stage 4: Development
# =============================================================================
FROM python:3.11-slim AS development

WORKDIR /app

# Install development dependencies
COPY build/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir jupyter notebook ipython pytest black flake8

# Copy all code
COPY src/ ./src/
COPY scripts/ ./scripts/
COPY tests/ ./tests/
COPY api/ ./api/

# Expose ports for Jupyter and API
EXPOSE 8080 8888

# Development mode - start Jupyter by default
CMD ["jupyter", "notebook", "--ip=0.0.0.0", "--port=8888", "--no-browser", "--allow-root"]